<?xml version="1.0" encoding="UTF-8" ?>

<configuration>
    <loggers>
        <root level="DEBUG">
            <appender-ref ref="spring6log"></appender-ref>
        </root>

    </loggers>

    <appenders>
        <console name="spring6log" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss SSS} [%t] %-3level %logger{1024} - %msg%n"></PatternLayout>
        </console>
    </appenders>
</configuration>
